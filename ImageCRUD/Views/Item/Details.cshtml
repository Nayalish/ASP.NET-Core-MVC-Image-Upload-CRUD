@model ImageCRUD.Models.Item

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-info">Character Detail </h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center p-4">
                            <span>Name : <em><b>@Model.Name</b></em></span>
                        </div>
                        <div class="col-6 text-center p-4">
                            <span>Age : <em><b>@Model.Age</b></em></span>
                        </div>
                        <div class="col-6 text-center p-4">
                            <span>Education : <em><b>@Model.Education</b></em></span>
                        </div>
                        <div class="col-6 text-center">
                            <img src="~/images/@Model.Image" style="width:100px; height:100px; border:1px solid red; border-radius:10px; padding:10px;" alt="Laptop image" /><br />
                            <span>Id : <em><b>@Model.Id</b></em></span>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-primary text-light m-2 p-2" asp-action="Index" asp-controller="Item">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

