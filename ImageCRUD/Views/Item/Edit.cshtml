@model ImageCRUD.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded-top">
            <h1 class="text-center text-info">Update Laptop Details</h1>
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" placeholder="Enter student name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Age"></label>
                    <input type="text" asp-for="Age" placeholder="Enter student age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Education" placeholder="Enter student Education" class="form-control" />
                    <span asp-validation-for="Education" class="text-danger"></span>
                    <input type="hidden" asp-for="Id" />
                </div>

                <div class="row mb-3">
                    <div class="col-8">
                        <label asp-for="Imagepath"></label>
                        <input type="file" class="form-control" asp-for="Imagepath" id="ChooseImg" />
                    </div>
                    <div class="col-4">
                        <img src="~/images/@Model.Image" style="width:200px;height:150px; border:1px solid red; border-radius:10px; padding:10px;" alt="Laptop image" id="PrevImg" />
                    </div>
                </div>
                <div class="form-group m-4">
                    <input type="submit" class="btn btn-group-sm btn-primary float-right" value="Update" />
                </div>
                <a class="btn btn-sm btn-warning p-2 m-2 " asp-action="Index" asp-controller="Item">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/item.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
